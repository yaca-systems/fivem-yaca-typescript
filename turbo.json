{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["typecheck", "^build"]
    },
    "typecheck": {
      "cache": false
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "create-resource": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
