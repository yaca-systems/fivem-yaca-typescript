{
  "name": "yaca-voice",
  "version": "1.0.3",
  "type": "module",
  "description": "YACA Voice Integration for FiveM",
  "author": "MineMalox & LuftigerLuca",
  "repository": {
    "type": "git",
    "url": "https://github.com/yaca-systems/fivem-yaca-typescript"
  },
  "imports": {
    "#client": "./dist/client.js",
    "#server": "./dist/server.js"
  },
  "scripts": {
    "prepare": "cd .. && husky yaca-voice/.husky",
    "build": "pnpm run typecheck && node build.js --mode=production",
    "watch": "node build.js",
    "typecheck": "pnpm run typecheck-client && pnpm run typecheck-server",
    "typecheck-client": "tsc --project client/tsconfig.json && tsc-alias -p client/tsconfig.json",
    "typecheck-server": "tsc --project server/tsconfig.json && tsc-alias -p server/tsconfig.json",
    "lint": "eslint client server types --fix",
    "prettier": "prettier --write \"{server,client}/**/*.{mjs,cjs,js,ts,json,yml,yaml,md}\"",
    "ci:typecheck": "pnpm run typecheck-client && pnpm run typecheck-server",
    "ci:lint": "eslint client server types",
    "ci:prettier": "prettier --check \"{server,client}/**/*.{mjs,cjs,js,ts,json,yml,yaml,md}\"",
    "ci:build": "pnpm run typecheck && node build.js --mode=production"
  },
  "dependencies": {
    "events": "^3.3.0",
    "fast-printf": "^1.6.9"
  },
  "devDependencies": {
    "@citizenfx/client": "latest",
    "@citizenfx/server": "latest",
    "@eslint/js": "^8.57.0",
    "@types/events": "^3.0.3",
    "@types/node": "^20.11.24",
    "esbuild": "^0.20.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "install": "^0.13.0",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.1.0"
  },
  "engines": {
    "node": ">=16.9.1"
  },
  "lint-staged": {
    "*.{mjs,cjs,js,ts}": [
      "eslint --fix --no-warn-ignored",
      "prettier --write --log-level=warn"
    ],
    "*.{json,yml,yaml,md}": [
      "prettier --write --log-level=warn"
    ]
  }
}
